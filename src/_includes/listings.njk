<div class="new-item px-5">
    <h2 class="py-3">New Properties in town</h2>
     <div class="row">
        <div class="col-lg-12 info d-flex flex-wrap align-items-center gap-5">
        {% for home in collections.listing %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src={{ home.data.image }} alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ home.data.title }}</h5>
                        <p class="card-text">{{ home.data.description }}</p>
                        <p class="card-text bg-light text-success">{{ home.data.location }}</p>
                    <ul class="d-flex ps-0 align-items-center gap-3">
                        <div class="d-flex align-items-center gap-2">
                         <img src= "../icons/bed.png" width="35px" height="35px" class="img-fluid"/>
                         <li class="list-group-item p-0 border-0 fs-6">{{ home.data.bedrooms }}</li>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                         <img src= "../icons/bath-tub.png"width="35px" height="35px"/>
                         <li class="list-group-item p-0 border-0 fs-6">{{ home.data.baths }}</li>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                         <img src= "../icons/area.png" width="35px" height="35px"/>
                         <li class="list-group-item border-0 p-0 fs-6">{{ home.data.area }}</li>
                        </div>
                    </ul>
                    <p class="card-text fw-bold">{{ home.data.price }}</p>
                    </div>
                    <div class="card-body">
                        <a href="/first/" data-index = {{ home.data.id }} class="my-btn btn btn-transparent btn-sm btn-outline-success">More Details</a>
                    </div>
                </div>
         {% endfor %}           
        </div>
    </div>
</div>