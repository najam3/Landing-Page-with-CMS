<div class="new-item px-5">
    <h2 class="py-3">New Properties in town</h2>
     <div class="row">
        <div class="col-lg-12 info d-flex flex-wrap align-items-center gap-5">
                    {%  for item in collections.listing  %}  
                    <div class="w-100 d-flex align-items-center flex-1 flex-wrap">
                     <div class="swiper mx-0 py-5 w-50">
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper">
                        <!-- Slides -->
                         {% for image in item.data.image %}
                        <div class="swiper-slide">
                          <img src={{ image }} class="img-fluid w-100"/>
                        </div>

                         {% endfor %}
                    
                    </div>                      
                    <!-- If we need pagination -->
                    <div class="swiper-pagination"></div>

                    <!-- If we need navigation buttons -->
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>

                    <!-- If we need scrollbar -->
                    <div class="swiper-scrollbar"></div>
                    </div>
                       <div class="align-self-start py-2 bg-light mt-5 px-2">
                        <h1 class='text-success'>{{ item.data.title }}</h1>
                        <div class="d-flex gap-3 align-items-center">
                        <h2> <img src="../icons/bath-tub.png" width="25px"/> {{ item.data.baths }}</h2>
                        <h2> <img src="../icons/bed.png" width="25px"/> {{ item.data.bedrooms }}</h2>
                        <h2><img src="../icons/area.png" width="25px"/> {{ item.data.area }}</h2>
                        </div>
                      
                        <p>{{ item.data.description }}</p>

                         <div class="align-self-start border rounded px-2 py-2">
                         <p class='fw-light m-0 text-primary'>Share on Social media</p>
                         <div class='d-flex align-items-center gap-4 mt-2'>
                          <i class='fa fa-whatsapp'></i>
                          <i class='fa fa-facebook'></i>
                         </div>
                        </div>
                        </div>
                    </div>           
                  </div>
                   
                        {% endfor %}         
        </div>
    </div>
</div>