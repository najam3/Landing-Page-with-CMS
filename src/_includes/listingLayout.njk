    {% include 'listings.njk' %}
    {% include 'footer.njk' %}
<script>
const sendMessage = document.getElementById('sendMessage');
const area = document.querySelector('h2[data-area]').innerText;
const price = document.querySelector('h3[data-price]').innerText
const type = document.querySelector('h1[data-type]').innerText;
const propertyLocation = document.querySelector('h4[data-location]').innerText;

sendMessage.addEventListener('click', function() {
      const message=`I'm interested in buying ${area} Sq.Yd house, of ${price} ${type} in ${propertyLocation}`;
      const num = "923000538700";
      const url = `https://api.whatsapp.com/send?phone=${num}&text=${encodeURIComponent(message)}`;
      window.open(url);
});

console.log(sendMessage)
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", function(user){
      if (!user) {
        window.netlifyIdentity.on("login", function(){
          document.location.href = "/admin/";
        });
      }
    });
  }
// Swiper
const swiper = new Swiper('.swiper', {
  // Optional parameters
  direction: 'horizontal',
  loop: true,

  // If we need pagination
  pagination: {
    el: '.swiper-pagination',
  },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },

  // And if we need scrollbar
  scrollbar: {
    el: '.swiper-scrollbar',
  },
});
</script>

</body>
</html>